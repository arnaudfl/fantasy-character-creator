{
  "name": "fantasy-character-creator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "cra-template-typescript": "^1.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "uuid": "^11.0.3",
    "web-vitals": "^4.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-backend": "node backend/server.js",
    "dev": "concurrently \"npm start\" \"npm run start-backend\"",
    "build": "react-scripts build && npm run build:backend",
    "build:backend": "tsc backend/server.ts --outDir build/backend",
    "build:avatars": "mkdir -p build/public/character-avatars",
    "prebuild": "npm run build:avatars",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^19.0.2"
  }
}
