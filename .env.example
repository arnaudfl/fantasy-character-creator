# Frontend Base URL
PORT=3000
FRONTEND_URL=http://localhost:3000

# Frontend API Base URL
REACT_APP_API_BASE_URL=http://localhost:5000

# Hugging Face API Token (for backend)
HUGGINGFACE_API_TOKEN=your_hugging_face_api_token

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# Uncomment and set if you use Redis password
# REDIS_PASSWORD=your_redis_password

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fantasy_character_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_postgres_password
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Authentication
JWT_ACCESS_SECRET=your_very_secure_access_token_secret
JWT_REFRESH_SECRET=your_very_secure_refresh_token_secret

# Token expiration (optional - defaults are set in code)
ACCESS_TOKEN_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# Security
ALLOWED_ORIGINS="http://localhost:3000"
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000 # 15 minutes in milliseconds

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_CHARACTER_CREATION=true
